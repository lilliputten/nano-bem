  "scripts": {
    "eslint": "echo --JS source code linting-- && eslint src --ext .js && echo No JS problems found",
    "lint": "echo --Lint all sources-- && npm-run-all eslint",
    "jest-clear": "echo --Clear jest cache-- && jest --clearCache",
    "jest": "echo --Run tests-- && jest --verbose",
    "test": "echo --Run all lintings and tests-- && npm-run-all lint jest",
    "build-dev": "echo --Build development-- && webpack --mode development",
    "build-prod": "echo --Build production-- && webpack --mode production",
    "build": "echo --Build default-- && npm run -s build-prod",
    "webpack-stats": "echo --Generate webpack stats-- && webpack --profile --json > .webpack-stats.json",
    "webpack-stats-analyze": "echo --Analyze webpack stats-- && npm run -s webpack-stats && webpack-bundle-analyzer .webpack-stats.json build",
    "tags": "ctags -R --exclude=@.ctagsignore ."
  }
